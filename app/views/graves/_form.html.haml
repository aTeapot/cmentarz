= form_for @grave, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :quarter_id, :class => 'control-label'
    .controls
      = f.text_field :quarter_id, :class => 'text_field'
  .control-group
    = f.label :type, :class => 'control-label'
    .controls
      = f.text_field :type, :class => 'text_field'
  .control-group
    = f.label :row, :class => 'control-label'
    .controls
      = f.text_field :row, :class => 'text_field'
  .control-group
    = f.label :number, :class => 'control-label'
    .controls
      = f.text_field :number, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_field :description, :class => 'text_field'
  .control-group
    = f.label :family_name, :class => 'control-label'
    .controls
      = f.text_field :family_name, :class => 'text_field'
  .control-group
    = f.label :data_state, :class => 'control-label'
    .controls
      = f.text_field :data_state, :class => 'text_field'
  .control-group
    = f.label :notes, :class => 'control-label'
    .controls
      = f.text_field :notes, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), graves_path, :class => 'btn'
