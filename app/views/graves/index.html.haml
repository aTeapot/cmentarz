- model_class = Grave
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:quarter_id)
      %th= model_class.human_attribute_name(:type)
      %th= model_class.human_attribute_name(:row)
      %th= model_class.human_attribute_name(:number)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:family_name)
      %th= model_class.human_attribute_name(:data_state)
      %th= model_class.human_attribute_name(:notes)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @graves.each do |grave|
      %tr
        %td= link_to grave.id, grave_path(grave)
        %td= grave.quarter_id
        %td= grave.type
        %td= grave.row
        %td= grave.number
        %td= grave.description
        %td= grave.family_name
        %td= grave.data_state
        %td= grave.notes
        %td=l grave.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_grave_path(grave), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), grave_path(grave), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_grave_path, :class => 'btn btn-primary'
