- model_class = Person
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:grave_id) + ':'
  %br
  = @person.grave_id
%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @person.first_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @person.last_name
%p
  %strong= model_class.human_attribute_name(:family_name) + ':'
  %br
  = @person.family_name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @person.description
%p
  %strong= model_class.human_attribute_name(:lived) + ':'
  %br
  = @person.lived
%p
  %strong= model_class.human_attribute_name(:raw_record) + ':'
  %br
  = @person.raw_record
%p
  %strong= model_class.human_attribute_name(:data_state) + ':'
  %br
  = @person.data_state
%p
  %strong= model_class.human_attribute_name(:notes) + ':'
  %br
  = @person.notes

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), people_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_person_path(@person), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), person_path(@person), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
