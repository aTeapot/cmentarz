- model_class = Quarter
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @quarters.each do |quarter|
      %tr
        %td= link_to quarter.id, quarter_path(quarter)
        %td= quarter.name
        %td=l quarter.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_quarter_path(quarter), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), quarter_path(quarter), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_quarter_path, :class => 'btn btn-primary'
